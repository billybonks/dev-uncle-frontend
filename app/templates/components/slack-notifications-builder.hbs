<h2>Slack Notifications</h2>
<p> automatically post pull requests matching a prebuilt filter (usefull if you want to show stale pr"s to the team for example)</p>
<RowForm>
  <RowField @label="Filter">
    {{#power-select options=filters renderInPlace=true selected=notification.filter onchange=(action "filterChanged") as |filter|}}
      {{filter.name}}
    {{/power-select}}
  </RowField>

  <RowField @label="Time">
    {{#power-select options=times renderInPlace=true selected=notification.time onchange=(action "timeChanged") as |time|}}
      {{time}}
    {{/power-select}}
  </RowField>

  <RowField @label="Type">
    {{#power-select options=types renderInPlace=true selected=notification.type onchange=(action "typeChanged") as |type|}}
      {{type}}
    {{/power-select}}
  </RowField>

  <RowField @label="Channel">
    <input value={{notification.channel}} type="text" oninput={{action (mut notification.channel) value="target.value"}}>
  </RowField>
</RowForm>
