{{#let
  (component
    "columns-destroy-action-cell"
    delete=(action "deleteRow")
    deactivate=(action "deactivateRow")
    activate=(action "activateRow")
  )
  as |destroyCell|}}
  <BaseTable
    @columns={{array
      (hash
        name="Name"
        valuePath="name"
        sortable=false
        cellComponent="columns-workflow-link"
      )
      (hash
        name="Actions"
        valuePath="active"
        sortable=false
        cellComponent=destroyCell
      )
    }}
    @sorts={{this.sorts}}
    @rows={{@rows}} as |t| >
    No workflows found.
  </BaseTable>
{{/let}}
