{{#light-table table tableActions=(hash delete=(action 'deleteRow') deactivate=(action 'deactivateRow')) as |t|}}
  {{t.head
    onColumnClick=(action 'onColumnClick')
    iconAscending='fa fa-sort-asc'
    iconDescending='fa fa-sort-desc'}}
  {{#t.body as |body|}}

    {{#if isLoading}}
      {{#body.loader}}
        Loading...
      {{/body.loader}}
    {{/if}}

    {{#if table.isEmpty}}
      {{#body.no-data}}
        No workflows found
      {{/body.no-data}}
    {{/if}}
  {{/t.body}}

{{/light-table}}
