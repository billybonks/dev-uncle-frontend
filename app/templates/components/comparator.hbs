{{#component @comparatorLayout property=this.property as |layout|}}
  {{#if layout.property}}
    <PowerSelectBlockless
      @options={{@properties}}
      @selected={{this.property}}
      @onchange={{@onPropertyChange}}
      class="ember-basic-dropdown"
    />
  {{/if}}
  {{#let (better-get @propertyDetails this.property) as |property|}}
    {{#if layout.comparator}}
      {{log (better-get this.comparators property.type)}}
      <PowerSelectBlockless
        @options={{better-get this.comparators property.type}}
        @selected={{@comparator}}
        @labelPath="key"
        @onchange={{@onComparatorChange}}
        class="ember-basic-dropdown"
      />
    {{/if}}
    {{#if layout.editor}}
      {{yield @comparator}}
    {{/if}}
  {{/let}}
{{/component}}
