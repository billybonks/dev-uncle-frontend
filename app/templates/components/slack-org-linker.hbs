<RowForm>
  <RowField @label="Slack Org">
    <PowerSelectBlockless
      @options={{this.slackOrgs}}
      @labelPath="name"
      @selected={{this.slackSetting.slackOrganization}}
      @onchange={{action "setSlackOrg"}}
      class="ember-basic-dropdown"
    />
  </RowField>
  <RowField>
    <Button @text="can't find organisation?" @action= {{action "redirectSlackAuth"}} />
  </RowField>
</RowForm>
<Button @text="link slack organisation" @task={{this.saveSlack}} />
