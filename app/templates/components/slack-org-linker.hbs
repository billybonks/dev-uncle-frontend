<RowForm>
  <RowField @label="Slack Org">
    <PowerSelectBlockless
      @options={{this.slackOrgs}}
      @labelPath="name"
      @selected={{this.slackSetting.slackOrganization}}
      @onchange={{action "setSlackOrg"}}
      class="ember-basic-dropdown"
    />
  </RowField>
  <RowField>
    <PowerButton @text="can't find organisation?" @action= {{action "redirectSlackAuth"}} />
  </RowField>
  <RowField @label="Channel">
    {{input value=this.slackSetting.slackChannel classNames="form-control"}}
  </RowField>
</RowForm>
<Power-button @text="link slack organisation" task={{this.saveSlack}} />
