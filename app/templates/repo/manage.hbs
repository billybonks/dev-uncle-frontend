<h1> State Mappings </h1>
{{#each states.states as |state|}}
  {{state-mapper stateName=state.name  labels=labels}}
{{/each}}

<h1>Hooks</h1>
<button type="button" class="btn btn-primary" {{action 'resolveHook' repo}}>
  {{#unless resolveHook.isIdle}} Processing {{/unless}}
  {{#unless repo.hook_id}}
    Install Hook
  {{else}}
    Uninstall Hook
  {{/unless}}
</button>
