<h1> State Mappings </h1>
{{state-mapper labels=repo.labels save=saveLabels}}
<h1>Hooks</h1>
<button type="button" class="btn btn-primary" {{action 'resolveHook' repo}}>
  {{#unless resolveHook.isIdle}} Processing {{/unless}}
  {{#unless repo.hook_id}}
    Install Hook
  {{else}}
    Uninstall Hook
  {{/unless}}
</button>
<h1>Slack</h1>
<div class="input-group">
  <div class="input-group-addon">
    Slack Org
  </div>
  <div class="form-control">
    {{#power-select options=slackOrgs renderInPlace=true selected=slack onchange=(action "setSlackOrg") as |label|}}
      {{label.name}}
    {{/power-select}}
  </div>
</div>
<div class="input-group">
  <div class="input-group-addon">
    Channel
  </div>
  {{input value=slackChannel classNames="form-control"}}
</div>
{{power-button text="save" task=saveSlack}}
<h1>Members</h1>
{{members-table model=repo.members repo=repo}}
